#!/bin/bash
# info: change ddns dns record id
# options: USER DOMAIN ID NEWID
#
# The function for changing the associated dns record id.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=$2
domain_idn=$2
id=$3
newid=$4
ddns_id=$domain-$id
new_ddns_id=$domain-$newid

# Includes
source $VESTA/func/main.sh
source $VESTA/func/domain.sh
source $VESTA/conf/vesta.conf

# Additional argument formatting
format_domain
format_domain_idn
# TODO: $domain_idn not used in this script - maybe $domain should be converted to $doman_idn ?


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '4' "$#" 'USER DOMAIN ID NEWID'
is_format_valid 'user' 'domain' 'id' 'newid'
is_system_enabled "$DNS_SYSTEM" 'DNS_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'dns' 'DOMAIN' "$domain"
is_object_unsuspended 'dns' 'DOMAIN' "$domain"
is_object_valid "dns/$domain" 'ID' "$newid"
is_object_valid "ddns" 'ID' "$ddns_id"
is_object_new "ddns" 'ID' "$new_ddns_id"


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Change ddns id and ddns dns record id
sed -i "s/^ID='$ddns_id' DOMAIN='$domain' RECORD_ID='$id'/ID='$new_ddns_id' DOMAIN='$domain' RECORD_ID='$newid'/" $USER_DATA/ddns.conf


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_history "changed ddns dns record id for dns record $id (now $newid) on $domain"
log_event "$OK" "$ARGUMENTS"

exit
