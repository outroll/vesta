#!/bin/bash
# info: get ddns for dns record
# options: USER DOMAIN RECORD TYPE [FORMAT]
#
# The function for obtaining the DDNS configuration for a DNS record.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=${2-shell}
domain_idn=$2
record=$(idn -t --quiet -u "$3" )
record=$(echo "$record" | tr '[:upper:]' '[:lower:]')
rtype=$(echo "$4"| tr '[:lower:]' '[:upper:]')
format=${5-shell}
id="$rtype-$record.$domain"

# Includes
source $VESTA/func/main.sh
source $VESTA/conf/vesta.conf

# JSON list function
json_list() {
    IFS=$'\n'
    i=1
    objects=$(grep "ID='$id'" $USER_DATA/ddns.conf |wc -l)
    echo "{"
    while read str; do
        eval $str
        echo -n '    "'$ID'": {
        "DOMAIN": "'$DOMAIN'",
        "RECORD": "'$RECORD'",
        "TYPE": "'$TYPE'",
        "KEY": "'$KEY'",
        "TIME": "'$TIME'",
        "DATE": "'$DATE'"
    }'
        if [ "$i" -lt "$objects" ]; then
            echo ','
        else
            echo
        fi
        ((i++))
    done < <(grep "ID='$id'" $USER_DATA/ddns.conf)
    echo '}'
}

# SHELL list function
shell_list() {
    IFS=$'\n'
    echo "ID   DOMAIN   RECORD   TYPE   KEY   TIME   DATE"
    echo "--   ------   ------   ----   ---   ----   ----"
    while read str; do
        eval $str
        echo "$ID $DOMAIN $RECORD $TYPE $KEY $TIME $DATE"
    done < <(grep "ID='$id'" $USER_DATA/ddns.conf)
}

# PLAIN list function
plain_list() {
    IFS=$'\n'
    while read str; do
        eval $str
        echo -ne "$ID\t$DOMAIN\t$RECORD\t$TYPE\t$KEY\t$TIME\t"
        echo -e "$DATE"
    done < <(grep "ID='$id'" $USER_DATA/ddns.conf)
}

# CSV list function
csv_list() {
    IFS=$'\n'
    echo "ID,DOMAIN,RECORD,TYPE,KEY,TIME,DATE"
    while read str; do
        eval $str
        echo "$ID,$DOMAIN,$RECORD,$TYPE,$KEY,$TIME,$DATE"
    done < <(grep "ID='$id'" $USER_DATA/ddns.conf)
}


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '4' "$#" 'USER DOMAIN RECORD TYPE [FORMAT]'
is_format_valid 'user' 'domain' 'record' 'rtype'
is_system_enabled "$DNS_SYSTEM" 'DNS_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'dns' 'DOMAIN' "$domain"
is_object_unsuspended 'dns' 'DOMAIN' "$domain"
is_object_valid "ddns" 'ID' "$id"


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Listing data
case $format in
    json)   json_list ;;
    plain)  plain_list ;;
    csv)    csv_list ;;
    shell)  shell_list |column -t ;;
esac


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

exit
