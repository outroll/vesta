#!/bin/bash
# info: delete ddns for dns record
# options: USER DOMAIN RECORD TYPE
#
# The function for removing DDNS functionality from the DNS record.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=$2
domain_idn=$2
record=$(idn -t --quiet -u "$3" )
record=$(echo "$record" | tr '[:upper:]' '[:lower:]')
rtype=$(echo "$4"| tr '[:lower:]' '[:upper:]')
id="$rtype-$record.$domain"

# Includes
source $VESTA/func/main.sh
source $VESTA/conf/vesta.conf


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '4' "$#" 'USER DOMAIN RECORD TYPE'
is_format_valid 'user' 'domain' 'record' 'rtype'
is_system_enabled "$DNS_SYSTEM" 'DNS_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'dns' 'DOMAIN' "$domain"
is_object_unsuspended 'dns' 'DOMAIN' "$domain"
is_object_valid "ddns" 'ID' "$id"


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Deleting ddns from ddns conf
sed -i "/^ID='$id'/d" $USER_DATA/ddns.conf


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

#Logging
log_history "deleted ddns configuration for dns $rtype record $record on $domain"
log_event "$OK" "$ARGUMENTS"

exit
