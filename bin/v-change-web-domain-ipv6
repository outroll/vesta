#!/bin/bash
# info: change web domain ip address
# options: USER DOMAIN IPV6 [RESTART]
#
# The call is used for changing the site ip address.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1
domain=$(idn -t --quiet -u "$2" )
domain_idn=$(idn -t --quiet -a "$domain")
ipv6=$3
restart=$4

# Includes
source $VESTA/func/main.sh
source $VESTA/func/domain.sh
source $VESTA/func/ipv6.sh
source $VESTA/conf/vesta.conf


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '3' "$#" 'USER DOMAIN IPV6 [RESTART]'
validate_format 'user' 'domain' 'ipv6'
is_system_enabled "$WEB_SYSTEM" 'WEB_SYSTEM'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"
is_object_valid 'web' 'DOMAIN' "$domain"
is_object_unsuspended 'web' 'DOMAIN' "$domain"
is_ipv6_valid
is_ipv6_avalable

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ "$IPV4" == "yes" ] && [ "$IPV6" == "no" ] ; then
  tpl_suffix=""
elif [ "$IPV4" == "no" ] && [ "$IPV6" == "yes" ] ; then
  tpl_suffix="IPV6"
else
  tpl_suffix="IP46"
fi

# Define variable for replace
get_domain_values 'web'
ipv6=$(get_real_ipv6 $ipv6)
tpl_file="$WEBTPL/$WEB_SYSTEM/$WEB_BACKEND/$TPL$tpl_suffix.tpl"
conf="$HOMEDIR/$user/conf/web/$WEB_SYSTEM.conf"
old=$(get_real_ipv6 $IP6)
new=$ipv6
replace_web_config

# Checking SSL
if [ "$SSL" = 'yes' ]; then
    tpl_file="$WEBTPL/$WEB_SYSTEM/$WEB_BACKEND/$TPL$tpl_suffix.stpl"
    conf="$HOMEDIR/$user/conf/web/s$WEB_SYSTEM.conf"
    replace_web_config
fi

# Checking proxy
if [ ! -z "$PROXY" ]; then
    tpl_file="$WEBTPL/$PROXY_SYSTEM/$PROXY$tpl_suffix.tpl"
    conf="$HOMEDIR/$user/conf/web/$PROXY_SYSTEM.conf"
    replace_web_config
fi

# Checking SSL proxy
if [ "$SSL" = 'yes' ] && [ ! -z "$PROXY" ]; then 
    tpl_file="$WEBTPL/$PROXY_SYSTEM/$PROXY$tpl_suffix.stpl"
    conf="$HOMEDIR/$user/conf/web/s$PROXY_SYSTEM.conf"
    replace_web_config
fi


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Update counters
increase_ipv6_value "$new"
decrease_ipv6_value "$old"

# Update config
update_object_value 'web' 'DOMAIN' "$domain" '$IP6' "$3"

# Restart web server
if [ "$restart" != 'no' ]; then
    $BIN/v-restart-web
    if [ $? -ne 0 ]; then
        exit $E_RESTART
    fi

    $BIN/v-restart-proxy
    if [ $? -ne 0 ]; then
        exit $E_RESTART
    fi
fi

# Logging
log_history "changed web domain $domain ipv6 to $3"
log_event "$OK" "$EVENT"

exit
