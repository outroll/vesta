#!/bin/bash
# info: list disk information
# options: [FORMAT]
#
# The function lists disk information


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
#format=${1-shell}

# Includes
#source $VESTA/func/main.sh


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Displaying disk usage
df -h
echo -en "\n-------------------------------------"
echo -en  "-------------------------------------\n\n"

# Displaying I/O usage
iostat -x

echo -en "\n-------------------------------------"
echo -en  "-------------------------------------\n\n"

# Displaying disk information
atop -Dd 1 2

echo -en "\n-------------------------------------"
iostat -m
echo -en "\n-------------------------------------"

fdisk -l
#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

exit
